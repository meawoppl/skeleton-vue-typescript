{
    "name": "skeleton-vue-typescript",
    "description": "A web frontend skeleton project with Vue.js, TypeScript, Bootstrap, Less, Webpack, and Jest.",
    "version": "0.0.3",
    "license": "Apache-2.0",
    "author": "Justus Bogner <jreb1990@gmail.com>",
    "scripts": {
        "build": "webpack --config webpack.prod.config.js --progress",
        "start": "webpack-dev-server --open --history-api-fallback --hot --config webpack.dev.config.js",
        "start-prod": "webpack-dev-server --open --history-api-fallback --config webpack.prod.config.js",
        "lint": "tslint -c tslint.json src/**/*.ts",
        "test": "jest",
        "sonar": "sonar-scanner"
    },
    "jest": {
        "testURL": "http://localhost",
        "moduleFileExtensions": [
            "ts",
            "js",
            "json",
            "vue"
        ],
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "transform": {
            ".*\\.(vue)$": "vue-jest",
            "^.+\\.tsx?$": "ts-jest"
        },
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.{ts,vue}",
            "!**/node_modules/**"
        ],
        "coverageReporters": [
            "html",
            "text-summary"
        ]
    },
    "dependencies": {
        "axios": "^0.18.0",
        "bootstrap": "^4.1.3",
        "bootstrap-vue": "^2.0.0-rc.11",
        "bootswatch": "^4.1.3",
        "core-js": "^2.6.1",
        "moment": "^2.23.0",
        "vue": "^2.5.21",
        "vue-class-component": "^6.3.2",
        "vue-property-decorator": "^7.2.0",
        "vue-router": "^3.0.2"
    },
    "devDependencies": {
        "@types/jest": "^23.3.10",
        "@vue/test-utils": "^1.0.0-beta.27",
        "clean-webpack-plugin": "^1.0.0",
        "css-loader": "^2.0.1",
        "file-loader": "^2.0.0",
        "git-revision-webpack-plugin": "^3.0.3",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^23.6.0",
        "less": "^3.9.0",
        "less-loader": "^4.1.0",
        "sonarqube-scanner": "^2.1.2",
        "string-replace-loader": "^2.1.1",
        "ts-jest": "^23.10.5",
        "ts-loader": "^5.3.1",
        "tslint": "^5.12.0",
        "tslint-loader": "^3.6.0",
        "tslint-webpack-plugin": "^1.3.0",
        "typescript": "^3.2.2",
        "vue-jest": "^3.0.2",
        "vue-loader": "^15.4.2",
        "vue-template-compiler": "^2.5.21",
        "webpack": "^4.28.0",
        "webpack-cli": "^3.1.2",
        "webpack-dev-server": "^3.1.10",
        "webpack-merge": "^4.1.5"
    }
}
