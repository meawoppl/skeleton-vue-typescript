{
    "name": "skeleton-vue-typescript",
    "description": "A web frontend skeleton project with Vue.js, TypeScript, Bootstrap, Less, Webpack, and Jest.",
    "version": "0.0.1",
    "license": "Apache-2.0",
    "private": true,
    "author": "Justus Bogner <jreb1990@gmail.com>",
    "scripts": {
        "build": "webpack --config webpack.prod.config.js --json --progress | tail -n +2 > ./build.log.json",
        "start": "webpack-dev-server --open --hot --config webpack.dev.config.js",
        "start-prod": "webpack-dev-server --open --config webpack.prod.config.js",
        "lint": "tslint -c tslint.json src/**/*.ts",
        "test": "jest"
    },
    "jest": {
        "testURL": "http://localhost",
        "moduleFileExtensions": [
            "ts",
            "js",
            "json",
            "vue"
        ],
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "transform": {
            ".*\\.(vue)$": "vue-jest",
            "^.+\\.tsx?$": "ts-jest"
        },
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.{ts,vue}",
            "!**/node_modules/**"
        ],
        "coverageReporters": [
            "html",
            "text-summary"
        ]
    },
    "dependencies": {
        "axios": "^0.18.0",
        "bootstrap": "^4.1.3",
        "bootstrap-vue": "^2.0.0-rc.11",
        "bootswatch": "^4.1.3",
        "core-js": "^2.5.7",
        "moment": "^2.22.2",
        "vue": "^2.5.17",
        "vue-class-component": "^6.2.0",
        "vue-property-decorator": "^7.0.0",
        "vue-router": "^3.0.1"
    },
    "devDependencies": {
        "@types/jest": "^23.0.0",
        "@vue/test-utils": "^1.0.0-beta.16",
        "css-loader": "^1.0.0",
        "file-loader": "^1.1.11",
        "git-revision-webpack-plugin": "^3.0.3",
        "jest": "^23.0.1",
        "less": "^3.8.0",
        "less-loader": "^4.1.0",
        "progress-bar-webpack-plugin": "^1.11.0",
        "string-replace-loader": "^2.1.1",
        "ts-jest": "^22.4.6",
        "ts-loader": "^4.4.2",
        "tslint": "^5.11.0",
        "tslint-loader": "^3.6.0",
        "tslint-webpack-plugin": "^1.2.2",
        "typescript": "^3.0.1",
        "vue-jest": "^2.6.0",
        "vue-loader": "^15.2.6",
        "vue-template-compiler": "^2.5.17",
        "webpack": "^4.16.3",
        "webpack-cli": "^3.1.0",
        "webpack-dev-server": "^3.1.5",
        "webpack-file-changer": "^2.0.1",
        "webpack-merge": "^4.1.4"
    }
}
